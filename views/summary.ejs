<%- include("./partials/header.ejs") %>
<h1>Summaries!</h1>
<p>You are logged in as: <%= email %></p>
<br>
<h2>Week <%= week %> averages:</h2>
<% if (sleep_duration !== null && sports_exer !== null) { %>
<h4>Sleep duration: <%= parseFloat(sleep_duration).toFixed(1) %> hours</h4>
<h4>Sleep quality: <%= parseFloat(sleep_quality).toFixed(1) %> hours</h4>
<h4>Sports and exercise: <%= parseFloat(sports_exer).toFixed(1) %> hours</h4>
<h4>Studying: <%= parseFloat(studying).toFixed(1) %> hours</h4>
<h4>Generic mood: <%= parseFloat(generic_mood).toFixed(1) %> (scale: 1-5)</h4>
<% } else { %>
    <p>There is currently no data available for this week.</p>
<% } %>

<h5>Want to see averages for another week?</h5>
<form method="POST" action="/behavior/summary/week">
    <fieldset>
        <label for="week">Week: </label>
        <input type="week" id="week" name="week"/>
        <input type="submit" value="Change Week"/>
    </fieldset>
</form>
<br>
<h2>Month <%= month %> averages:</h2>
<% if (sleep_duration_month !== null && sports_exer_month !== null) { %>
<h4>Sleep duration: <%= parseFloat(sleep_duration_month).toFixed(1) %> hours</h4>
<h4>Sleep quality: <%= parseFloat(sleep_quality_month).toFixed(1) %> hours</h4>
<h4>Sports and exercise: <%= parseFloat(sports_exer_month).toFixed(1) %> hours</h4>
<h4>Studying: <%= parseFloat(studying_month).toFixed(1) %> hours</h4>
<h4>Generic mood: <%= parseFloat(generic_mood_month).toFixed(1) %> (scale: 1-5)</h4>
<% } else { %>
<p>There is currently no data available for this month.</p>
<% } %>

<h5>Want to see averages for another month?</h5>
<form method="POST" action="/behavior/summary/month">
    <fieldset>
        <label for="month">Month: </label>
        <input type="month" id="month" name="month"/>
        <input type="submit" value="Change Month"/>
    </fieldset>
</form>
<br>
<br>
<%- include('./partials/logout.ejs') %>
<%- include("./partials/footer.ejs") %>